#!/bin/bash
DIR=$(dirname "$0")
LOG_FILE="$DIR/app_log.txt"

# Clear previous log and add timestamp
date > "$LOG_FILE"
echo "--- Starting application ---" >> "$LOG_FILE"

# Run the Python script and append stdout/stderr to the log file
/opt/homebrew/bin/python3 "$DIR/yt_downloader_gui.py" >> "$LOG_FILE" 2>&1
